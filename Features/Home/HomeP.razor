@page "/"
@using MOOCPediaApp.Models

<PageTitle>MOOCpedia</PageTitle>

<div class="home-container">
    @* Intoduction *@
    <div style="height: auto; min-height: 500px; display: flex;">
        <div class="base-image-container" style="background-image: url('images/home-photo-1.png'); flex: 1; background-position: right;">
            <div>
                <RadzenText Text="The courses you are looking for in one place!" />
            </div>
        </div>
    </div>

    @* Courses *@
    <div style="background-color: var(--rz-secondary); padding: 1rem;">
        <div>
            <h1 style="margin-left: 4.5rem;">Explore our latest MOOC</h1>
        </div>

        <RadzenCarousel Style="padding-left: 75px; padding-right: 75px;" PagerOverlay=false>
            <Items>
                @foreach (var course in _courses)
                {
                    <HomeCarouselCard Course="course" />
                }
            </Items>
        </RadzenCarousel>
    </div>

    @* Authors *@
    <div class="home-bottom">
        <h1 style="color: var(--rz-text-secondary-color);">Authors</h1>

        <div class="base-container authors-container">

            @foreach (var author in _authors)
            {
                <AuthorC Author="author" />
            }
        </div>
    </div>
</div>

@code {
    List<CourseCard> _courses = new();
    List<AuthorProfile> _authors = new();

    protected override void OnInitialized()
    {
        var course = new CourseCard
            {
                Title = "Photovoltaic Systems",
                Description = "This MOOC offers a comprehensive exploration of photovoltaic systems, covering renewable energy sources, solar geometry, and the principles behind solar power generation. You'll also learn about system installation, inverters, battery types, and maintenance, with a focus on practical applications for residential environments. "
            };

        _courses.Add(course);

        var author1 = new AuthorProfile
            {
                Name = "Ivo Martins",
                PhotoUrl = "ivo-profile.jpg",
                Role = "Full-stack Developer"
            };

        var author2 = new AuthorProfile
            {
                Name = "Simão Amaral",
                PhotoUrl = "simao-profile",
                Role = "Font-end Developer"
            };

        var author3 = new AuthorProfile
            {
                Name = "João Victor",
                PhotoUrl = "joao-profile",
                Role = "Designer"
            };

        _authors.Add(author1);
        _authors.Add(author2);
        _authors.Add(author3);
    }

}