
<div class="search-container">
    <RadzenButton Click=Search Icon="search" class="search-icon" />
    <RadzenTextBox @bind-Value="_searchInput" Placeholder="Search" class="search-input" Style="flex: 1;" />
</div>

@code {
    private string? _searchInput = null;

    #region Functions
    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await Search();
        }
    }
    #endregion

    #region Clicks
    private Task Search()
    {
        Console.WriteLine($"Searching for: {_searchInput}");
        return Task.CompletedTask;
    }
    #endregion
}

